<Window x:Class="Presentation.View.Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Presentation.ViewModel"
        Title="Library Management System" Height="600" Width="1000">
    <Window.DataContext>
        <vm:ViewModelMain />
    </Window.DataContext>

    <DockPanel>
        <!-- NAGWEK -->
        <TextBlock Text="Hello in Library!" FontSize="28" FontWeight="Bold" 
                   Background="#2C3E50" Foreground="White" Padding="20"
                   HorizontalAlignment="Center" TextAlignment="Center"
                   DockPanel.Dock="Top" />

        <!-- PRZYCISKI NA GRZE -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="LightGray">
            <Button Content="Employees" Margin="5" Command="{Binding ShowEmployeeCommand}" />
            <Button Content="Books" Margin="5" Command="{Binding ShowBookCommand}" />
            <Button Content="Readers" Margin="5" Command="{Binding ShowReaderCommand}" />
            <Button Content="Catalog" Margin="5" Command="{Binding ShowCatalogCommand}" />
            <Button Content="Users" Margin="5" Command="{Binding ShowUserCommand}" />
            <Button Content="Events" Margin="5" Command="{Binding ShowEventCommand}" />
            <Button Content="States" Margin="5" Command="{Binding ShowStateCommand}" />
        </StackPanel>

        <!-- WIDOK ZAWARTOCI -->
        <ContentControl Content="{Binding CurrentView}" />
    </DockPanel>
</Window>

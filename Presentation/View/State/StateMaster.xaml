<UserControl x:Class="Presentation.View.State.StateMaster"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Presentation.ViewModel"
             Background="White">
    <UserControl.DataContext>
        <vm:VMStateList />
    </UserControl.DataContext>
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Margin="10">
            <TextBlock Text="State" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal">
                <Button Content="Add New" Width="100" Margin="5" Command="{Binding AddCommand}" />
                <Button Content="Delete" Width="100" Margin="5" Command="{Binding DeleteCommand}" />
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="0,10">
                <Label Content="Id:" />
                <TextBox Text="{Binding SelectedItem.Id, UpdateSourceTrigger=PropertyChanged}" />
                <Label Content="Status:" />
                <TextBox Text="{Binding SelectedItem.Status, UpdateSourceTrigger=PropertyChanged}" />
                <Label Content="Type:" />
                <TextBox Text="{Binding SelectedItem.Type, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
            <Button Content="Refresh" Width="100" Margin="5" Command="{Binding RefreshCommand}" HorizontalAlignment="Right"/>
        </StackPanel>
        <DataGrid ItemsSource="{Binding Items}" SelectedItem="{Binding SelectedItem}" AutoGenerateColumns="False" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="*" />
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*" />
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</UserControl>
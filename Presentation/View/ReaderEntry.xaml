<UserControl x:Class="Presentation.View.ReaderEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentation.View"
             xmlns:vmodel="clr-namespace:Presentation.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vmodel:VMReader/>
    </UserControl.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label Grid.Column="0" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5">Id:</Label>
        <Label Grid.Column="0" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5">Name:</Label>
        <Label Grid.Column="0" Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5">Surname:</Label>
        <Label Grid.Column="0" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5">Email:</Label>
        <Label Grid.Column="0" Grid.Row="4" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5">Phone Number:</Label>
        <Label Grid.Column="0" Grid.Row="5" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5">Role:</Label>
        <Label Grid.Column="0" Grid.Row="6" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5">Debt:</Label>

        <TextBox Grid.Column="1" Grid.Row="0" Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Center" Text="{Binding id}" IsReadOnly="True"/>
        <TextBox Grid.Column="1" Grid.Row="1" Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Center" Text="{Binding name}"/>
        <TextBox Grid.Column="1" Grid.Row="2" Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Center" Text="{Binding surname}"/>
        <TextBox Grid.Column="1" Grid.Row="3" Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Center" Text="{Binding email}"/>
        <TextBox Grid.Column="1" Grid.Row="4" Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Center" Text="{Binding phoneNumber}"/>
        <TextBox Grid.Column="1" Grid.Row="5" Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Center" Text="{Binding role}"/>
        <TextBox Grid.Column="1" Grid.Row="6" Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Center" Text="{Binding debt}" IsReadOnly="True"/>

        <Button Grid.Column="2" Grid.Row="0" Margin="10,5" Command="{Binding AddReader}" Height="Auto" Width="Auto">Add New</Button>
        <Button Grid.Column="2" Grid.Row="1" Margin="10,5" Command="{Binding DeleteReader}" Height="Auto" Width="Auto">Delete</Button>
    </Grid>
</UserControl>

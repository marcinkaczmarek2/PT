<UserControl x:Class="Presentation.View.ReaderMaster"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentation.View"
             xmlns:vmodel="clr-namespace:Presentation.ViewModel"
             xmlns:view="clr-namespace:Presentation.View"
             mc:Ignorable="d" 
             Height="500" Width="800">
    <UserControl.DataContext>
        <vmodel:VMReaderList/>
    </UserControl.DataContext>
    <DockPanel Margin="20">
        <TextBlock FontSize="24" DockPanel.Dock="Top" Margin="0,0,0,10">Readers</TextBlock>
        <Grid VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <GroupBox Header="Selected Entry">
                <view:ReaderEntry FontSize="12" DataContext="{Binding SelectedReader}" Margin="0,0,9,0" />
            </GroupBox>
            <GroupBox Grid.Row="1">
                <ListView Grid.Row="1" HorizontalAlignment="Stretch" Margin="0,5" ItemsSource="{Binding ReaderList}" SelectedIndex="{Binding SelectedIndex}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Id" Width="50" DisplayMemberBinding="{Binding id}" />
                            <GridViewColumn Header="Name" Width="150" DisplayMemberBinding="{Binding name}" />
                            <GridViewColumn Header="Surname" Width="150" DisplayMemberBinding="{Binding surname}" />
                            <GridViewColumn Header="Email" Width="200" DisplayMemberBinding="{Binding email}" />
                            <GridViewColumn Header="Phone Number" Width="120" DisplayMemberBinding="{Binding phoneNumber}" />
                            <GridViewColumn Header="Role" Width="100" DisplayMemberBinding="{Binding role}" />
                            <GridViewColumn Header="Debt" Width="80" DisplayMemberBinding="{Binding debt}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </GroupBox>
        </Grid>
    </DockPanel>
</UserControl>

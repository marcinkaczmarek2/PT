<UserControl x:Class="Presentation.View.Catalog.CatalogMaster"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Presentation.ViewModel"
             Background="White">
    <UserControl.DataContext>
        <vm:VMCatalogList />
    </UserControl.DataContext>

    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Margin="10">
            <TextBlock Text="Catalog" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal">
                <Button Content="Add New" Width="100" Margin="5" Command="{Binding AddCommand}" />
                <Button Content="Delete" Width="100" Margin="5" Command="{Binding DeleteCommand}" />
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="0,10">
                <Label Content="Id:" />
                <TextBox Text="{Binding SelectedBook.Id}" IsReadOnly="True"/>

                <Label Content="Title:" />
                <TextBox Text="{Binding SelectedBook.Title, UpdateSourceTrigger=PropertyChanged}" />

                <Label Content="Author:" />
                <TextBox Text="{Binding SelectedBook.Author, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <Button Content="Refresh" Width="100" Margin="5" Command="{Binding RefreshCommand}" HorizontalAlignment="Right"/>
        </StackPanel>

        <DataGrid ItemsSource="{Binding Books}" SelectedItem="{Binding SelectedBook}" AutoGenerateColumns="False" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="*" />
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*" />
                <DataGridTextColumn Header="Author" Binding="{Binding Author}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</UserControl>
